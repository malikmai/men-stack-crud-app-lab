<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Video Game Database</title>
</head>
<body>
    <h1>Video Game Database</h1>
   <button><a href="/games/new">Add New Game</a></button>

    <ul>
        <% games.forEach(function(game) { %> 
            <li>
                <%= game.title %> - <%= game.studio %> 
                <a href="/games/<%= game._id %> ">View</a> 
                <a href="/games/<%= game._id %>/edit ">Edit</a> 

                <form action="/games/<%= game._id %>/delete" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
